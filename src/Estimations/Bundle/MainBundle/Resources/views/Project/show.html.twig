{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Hd</th>
                <td>{{ entity.hd }}</td>
            </tr>
            <tr>
                <th>Velocity</th>
                <td>{{ entity.velocity }}</td>
            </tr>
            <tr>
                <th>Sprint time</th>
                <td>{{ entity.sprintTime }}</td>
            </tr>
            <tr>
                <th>Holidays</th>
                <td>{{ entity.holidays }}</td>
            </tr>
            <tr>
                <th>Client visits</th>
                <td>{{ entity.clientVisits }}</td>
            </tr>
            <tr>
                <th>Remaining SP</th>
                <td>{{ entity.remainingSP }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('project') }}" class="btn btn-primary">
        Back to the list
    </a>
    <a href="{{ path('project_edit', { 'id': entity.id }) }}" class="btn btn-primary">
        Edit
    </a>
    {{ form(delete_form) }}

    <a href="{{ path('issue_new', { 'projectId': entity.id }) }}" class="btn btn-success">
        Add issue
    </a>


    <table class="table">
        <thead>
        <tr>
            <td>Id</td>
            <td>Key</td>
            <td>Time Spent</td>
            <td>Story Points</td>
        </tr>
        </thead>
        <tbody>
        {% for issue in issues %}
        <tr>
            <td>{{ issue.id }}</td>
            <td>{{ issue.issueKey }}</td>
            <td>{{ issue.timeSpent }}</td>
            <td>{{ issue.storyPoints }}</td>
        </tr>
        {%  endfor %}
        </tbody>
    </table>
{% endblock %}
