{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Project list</h1>
    <a href="{{ path('project_new') }}" class="btn btn-primary" >
        Create a new entry
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Hd</th>
                <th>Velocity</th>
                <th>Sprinttime</th>
                <th>Holidays</th>
                <th>Clientvisits</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.hd }}</td>
                <td>{{ entity.velocity }}</td>
                <td>{{ entity.sprintTime }}</td>
                <td>{{ entity.holidays }}</td>
                <td>{{ entity.clientVisits }}</td>
                <td>
                    <a href="{{ path('project_show', { 'id': entity.id }) }}" class="btn btn-primary btn-xs">show</a>
                    <a href="{{ path('project_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-xs">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
